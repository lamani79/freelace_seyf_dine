{
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.4",
    "tailwindcss": "^2.2.15"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "live-server": "^1.1.0",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.0.2"
  },
  "scripts": {
    "build_main": "postcss src/nav_footer_base.css -o dist/nav_footer_base_output.css --watch --verbose",
    "build_contact": "postcss src/contact_style.css -o dist/contact_style_output.css --watch --verbose",
    "build_one_page": "postcss src/one_page_section_style.css -o dist/one_page_section_output.css --watch --verbose",

    "build": "postcss src/styles.css -o dist/output.css --watch --verbose",

    
    "production": "NODE_ENV=production postcss src/styles.css -o dist/output.css",
    "build-css": "tailwindcss build -i src/styles.css -o dist/output.css"
  }
}


